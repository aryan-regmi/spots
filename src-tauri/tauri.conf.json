{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "spots",
    "version": "0.1.0",
    "identifier": "com.aryan.spots",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "spots",
                "resizable": false
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": "all",
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ]
    },
    "plugins": {
        "sql": {
            "preload": ["sqlite:spots.db"]
        }
    }
}
